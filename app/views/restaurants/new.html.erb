<div class='container'>
	<h1 style="text-align: center">Add a Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"]%>
  <%= f.submit "Add Restaurant", class: "btn btn-primary" %>
  <%= link_to "Home", restaurants_path, class: "btn btn-danger" %>
<% end %>
	
</div>
